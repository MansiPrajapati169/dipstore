<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_green">
        <item name="android:background">@drawable/button_design</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="buttonWhite" parent="button_green">
        <item name="android:textColor">@color/button_color</item>
        <item name="android:background">@drawable/button_basic</item>
    </style>

    <style name="darkTitle">
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">@dimen/_22sdp</item>
    </style>

    <style name="lightText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
</resources>