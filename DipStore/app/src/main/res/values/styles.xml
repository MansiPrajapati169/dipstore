<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_green" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_design</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="buttonWhite" parent="button_green">
        <item name="android:textColor">@color/button_color</item>
        <item name="android:background">@drawable/button_basic</item>
    </style>

    <style name="buttonNormal" parent="button_green">
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:background">@drawable/button_basic</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
    </style>

    <style name="roundImageview">
        <item name="cornerSize">50%</item>
    </style>

    <style name="darkTitle">
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">@dimen/_22sdp</item>
    </style>

    <style name="detailProductNameText" parent="darkTitle">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="darkSmallText" parent="darkTitle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabText">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="productNameText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="followButton" parent="productNameText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
    </style>
    <style name="priceText" parent="productNameText">
        <item name="android:textColor">@color/button_color</item>
    </style>

    <style name="basePrice">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/dm_sans</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="lightText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="lightTextGreen" parent="darkTitle">
        <item name="fontWeight">700</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/button_color</item>
    </style>

    <style name="line">
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="textInputLayout">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="sizeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.2</item>
        <item name="background">@drawable/button_round</item>
    </style>

    <style name="radioButton">
        <item name="android:textColor">#CBD5E1</item>

    </style>
    <style name="CustomRadioTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
<!--        <item name="android:textColorHighlight">@color/purple_200</item>-->
        <item name="textFillColor">@color/button_color</item>
    </style>

    <style name="radioButtonStyle" parent="tabText">
        <item name="android:textColor">@color/radio_text_color</item>
        <item name="android:layout_width">@dimen/_38sdp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:background">@drawable/button_round</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>
</resources>