<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dipstore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DipStore">
        <activity
            android:name=".database.DatabaseActivity"
            android:exported="false" />
        <activity
            android:name=".home.DetailActivity"
            android:exported="true"
            android:theme="@style/AppTheme.ActionBar.Transparent"/>
        <activity
            android:name=".home.NavigationActivity"
            android:exported="true"
            android:theme="@style/AppTheme.ActionBar.Transparent">
        </activity>
        <activity
            android:name=".forgotpassword.ForgotPasswordActivity"
            android:exported="true"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".authentication.SignUpActivity"
            android:exported="true"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".authentication.SignInActivity"
            android:exported="true"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".onboarding.OnBoardingActivity"
            android:exported="true"
            android:theme="@style/AppTheme.ActionBar.Transparent"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".notifications.MyFirebaseInstanceIdService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.onesignal.NotificationOpened.DEFAULT"
            android:value="DISABLE" />

    </application>

</manifest>